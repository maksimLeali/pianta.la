<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SceneViewSample" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/sceneview</item>
        <item name="colorAccent">@color/sceneview</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Theme.SceneViewSample.Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="logo">@drawable/splash_screen_image</item>
    </style>
    <style name="Theme.SpashScreenTest" parent="Theme.AppCompat.NoActionBar" />
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar" />

</resources>
